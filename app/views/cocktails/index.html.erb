<div class="container" >
  <div class="row">

  <% @cocktails.each do |cocktail| %>
    <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
      <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= if cocktail.photo.url == nil
      image_path('placeholder.jpg')
    else
      cl_image_path cocktail.photo
    end
    %>')">
        <div class="card-name-index">
          <h2><%= link_to "#{cocktail.name}", cocktail_path(cocktail), class:"btn btn-danger" %></h2>
        </div>
      </div>
    </div>
  <%end%>

  </div>

</div>
